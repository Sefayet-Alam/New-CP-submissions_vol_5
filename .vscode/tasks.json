{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++-14 build and run with increased stack",
            "type": "shell",
            "command": "zsh",
            "args": [
                "-c",
                "source ~/.zshrc && ulimit -s 65520 && echo 'PATH: $PATH' && /opt/homebrew/bin/g++-14 -fdiagnostics-color=always -g '${file}' -o '${fileDirname}/${fileBasenameNoExtension}' && '${fileDirname}/${fileBasenameNoExtension}'"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task to build and run C++ file with increased stack size"
        }
    ]
}
